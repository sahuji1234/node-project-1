<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/static/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Home</title>
  </head>
  <body>
    {{>navbar data=details}}
  
    {{> slider slides=slides}}

   {{!-- banner1 --}}

<section class="banner1_section py-5 background1">
<div class="container text-center ">
  <div class="row">
    <div class="col-md-12">

      {{#each banners}}
      {{#each this.banner1}}
      <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <button class="btn btn-outline-primary">{{this.buttonText}}</button>
      {{/each}}
       {{/each}}
    </div>
  </div>
</div>
</section>

   {{!-- services --}}

   <section id="service_section" class="py-3 background3">
   <div class="container">
     <h1 class="text-center text-secondary">Our Services</h1>
        <div class="row mt-5">
            {{!-- first service column --}}
        {{#each services}}
          <div class="col-md-4 my-2">
          <div class="card">
            <div class="card-body">
                <div class="container text-center py-3">
                  <i class="{{this.icon}} service_icon"></i>
                </div>
              <h5 class="card-title">{{this.title}}</h3>
              <p>{{this.description}}</p>
            
              <a href="{{this.link}}">{{this.linkText}}</a>
              
            </div>
          </div>
          </div>
          {{/each}}
        </div>
   </div>
   </section>
  
 {{!-- banner2 --}}

<section class="banner2_section my-3">
  <div class="container">
      {{#each banners}}
      {{#each banner2}}
    <div class="row">
      <div class="col-md-6 text-center">
            {{!--Left side --}}
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <button class="btn btn-primary">{{this.buttonText}}</button>
      </div>
      <div class="col-md-6 text-center py-3">
          {{!--Right side --}}
          <img src="{{this.image}}" style="height: 300px" alt="">
      </div>
    </div>
      {{/each}}
      {{/each}}
  </div>
</section>


{{!-- banner3 --}}

<section class="banner3_section my-3">
  <div class="container">
    {{#each banners}}
    {{#each banner3}}
    <div class="row">  
      <div class="col-md-6 text-center py-3">
          {{!--Right side --}}
          <img src="{{this.image}}" class="img-fluid" style="height: 300px" alt="">
      </div>
      <div class="col-md-6 text-center">
            {{!--Left side --}}
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <button class="btn btn-primary">{{this.buttonText}}</button>
      </div>
    </div>
    {{/each}}
    {{/each}}
  </div>
</section>





 {{!-- contact us section --}}

 <section id="contact_us_section" class="py-5 background1">
    <div class="container">
      <h3 class="text-center text-white">Contact us</h3>
      <div class="row">
        <div class="col-md-12">

        <form action="process-contact-form" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Your Email address</label>
            <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="contactNumberField" class="form-label">Your Contact Number</label>
            <input name="phone"type="number" class="form-control" id="contactNumberField">
          </div>
        
        <div class="form-floating my-2">
          <textarea name="query" style="height: 250px;" class="form-control" placeholder="enter your query here" id="queryField" style="height: 100px"></textarea>
          <label for="queryField">Your Query</label>
        </div>

        <div class="container text-center my-3">
          <button type="submit" class="btn btn-dark">Submit</button>
        </div>

         </form>
        </div>
      </div>
    </div>
 </section>

  {{!-- about section --}}

  <section class="about_section background1">
    <div class="container text-center my-4">
      {{#each about}}
      <div class="row">
      <div class="col-md-12">
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
         <button class="btn btn-primary my-3">{{this.buttonText}}</button>
      </div>
    </div>
    {{/each}}
    </div>
  </section>

{{!-- footer --}}

<sction class="">
<footer class="container  text-center py-5">
   <div class="container background4">
   
    <div class="row">
      <div class="col-md-12">
        {{#each footer}}
            <h5 class="text-white">{{this.footer}}</h5>
       {{/each}}
      </div>
    </div>
   </div>
</footer>
</sction>
  </body>
</html>